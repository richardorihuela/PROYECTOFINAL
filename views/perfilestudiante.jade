block navegador
	ul.navbar
		li
			a(href='/miscursos') Mis Cursos
		li
			a(href='/perfilestudiante') Perfil
block contenido
	.datos
		.foto
		.centrado
			h2.blanco!= nombre
			.mitades
			h5.blanco!= "Curso: " + grado 
			.mitades
			h5.blanco!= "Paralelo: " + paralelo
